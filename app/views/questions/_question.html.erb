<div class="mb-sm">
  <%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>
  <div>
    <% if current_user == question.user %>
    <%= link_to fa_icon("pencil"), edit_question_path(question), 
      title: "Редактировать вопрос" %>
    <%= button_to fa_icon("eye-slash"), hide_question_path(question), method: :put, title: "Скрыть вопрос", form: { data: { turbo_confirm: "Точно скрыть вопрос?" }}unless question.hidden? %>
    <%= button_to fa_icon("trash-o"), question_path(question), 
      method: :delete, title:"Удалить вопрос", 
      form: { data: { turbo_confirm: "Точно удалить вопрос?" } } %>
  </div>
  <% end %>
</div>